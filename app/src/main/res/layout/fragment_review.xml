<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FBFBFB"
    tools:context=".ui.review.ReviewFragment"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/amaranth"
        android:text="Tell us How we Did"
        android:textColor="@color/DarkBlue"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/text_contact"
        android:layout_centerHorizontal="true"
        android:src="@drawable/review" />

    <TextView
        android:id="@+id/nameofrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/DarkBlue"
        android:text="Very Disatisfied" />

    <RatingBar
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nameofrate"
        android:backgroundTint="#0B0A0A"
        android:progressBackgroundTint="#786E61"
        android:progressTint="#ddac17" />

    <EditText
        android:id="@+id/feedback"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stars"
        android:layout_centerHorizontal="true"
        android:background="#8eb1c2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter your feedback"
        android:inputType="textMultiLine"
        android:lines="4"
        android:padding="5dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Send Feedback" />

</RelativeLayout>