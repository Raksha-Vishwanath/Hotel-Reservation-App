<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/white">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/amaranth"
            android:text="About Us"
            android:textColor="@color/DarkBlue"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="183dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/about" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageSlider"
            android:lineSpacingMultiplier="1.2"
            android:text="Welcome to our hotel, where comfort and luxury meet to create an unforgettable experience for our guests. Our rooms, ranging from standard to executive suites, are designed with modern amenities to ensure a relaxing stay. Take a dip in our sparkling outdoor swimming pool surrounded by lush greenery, or enjoy a delicious meal at our on-site restaurant offering a variety of culinary delights. Stay active in our well-equipped fitness center, host successful meetings in our versatile event spaces, and let our concierge team assist you with any arrangements to enhance your stay."
            android:textColor="@color/DarkBlue"
            android:textSize="13sp"
            android:textStyle="italic" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Follow Us At"
                    android:textColor="@color/DarkBlue"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/insta"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="openInstagram"
                    android:src="@drawable/instagram" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Watch Us At"
                    android:textColor="@color/DarkBlue"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/yt"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="openInstagram"
                    android:src="@drawable/youtube" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Install App At"
                    android:textColor="@color/DarkBlue"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/playstore"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="openInstagram"
                    android:src="@drawable/playstore" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>